<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippet_statistics"  name="Statistic Dynamic">
        <section class="dynamic_snippet_statistic">
            <!-- <h1 class="text-align:center">Statistic Table</h1> -->
            <div class="container snippet_statistics">
                   <t t-call ="t4_statistic.s_t4_statistic"/>
            </div>
        </section>
    </template>

    <record id="t4_statistic.s_t4_statistic_001_js" model="ir.asset">
      <field name="name">T4 Statistic 001 JS</field>
      <field name="bundle">web.assets_frontend</field>
      <field name="path">t4_statistic/static/src/snippets/s_t4_statistic/001.js</field>
    </record>
    <record id="t4_statistic.s_t4_statistic_001_xml" model="ir.asset">
      <field name="name">T4 Statistic 001 XML</field>
      <field name="bundle">web.assets_frontend</field>
      <field name="path">t4_statistic/static/src/snippets/s_t4_statistic/001.xml</field>
    </record>
</odoo>

