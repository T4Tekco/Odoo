<odoo>

    <template id="s_t4_contact_searchbar_input" name="Search">
        <form class="t4_search_form" action="/search/contacts" method="get">
            <div class="form-group">
                <input class="t4_search_query form-control" name="query" />
            </div>
        </form>
    </template>

    <template id="s_t4_contact_searchbar" name="T4 Contact Searchbar">
        <section class="s_searchbar o_colored_level o_cc o_cc2 pt48 pb48">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h2>Contact Search</h2>
                        <t t-call="t4_search.s_t4_contact_searchbar_input" />
                    </div>
                </div>
            </div>
        </section>
    </template>


    <record id="t4_search.s_t4_contact_searchbar_000_js" model="ir.asset">
        <field name="name">T4 Contact Searchbar 000 JS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">t4_search/static/src/snippets/s_t4_contact_searchbar/000.js</field>
    </record>

    <record id="t4_search.s_t4_contact_searchbar_000_xml" model="ir.asset">
        <field name="name">T4 Contact Searchbar 000 XML</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">t4_search/static/src/snippets/s_t4_contact_searchbar/000.xml</field>
    </record>
</odoo>